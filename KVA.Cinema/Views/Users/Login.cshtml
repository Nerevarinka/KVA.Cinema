@model KVA.Cinema.Models.ViewModels.User.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ReturnUrl)

    <fieldset>
        <legend>Login</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.EditorFor(model => model.Password, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RememberMe)
            @Html.EditorFor(model => model.RememberMe, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RememberMe)
        </div>
    </fieldset>

    <p>
        <input type="submit" value="Log in" />
    </p>
}

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}