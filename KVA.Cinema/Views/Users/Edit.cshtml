@model KVA.Cinema.Models.User.UserCreateViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>User</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, "First Name")
            @Html.EditorFor(model => model.FirstName, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LastName, "Last Name")
            @Html.EditorFor(model => model.LastName, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Nickname, "Nickname")
            @Html.EditorFor(model => model.Nickname, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nickname)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, "Email")
            @Html.EditorFor(model => model.Email, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BirthDate, "Birth date")
            @Html.EditorFor(model => model.BirthDate, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BirthDate)
        </div>

        <p>
            <input type="submit" value="Save changes" />
        </p>
    </fieldset>

    @Html.ActionLink("Back to List", "Index")
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
