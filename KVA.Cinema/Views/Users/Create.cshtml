@model KVA.Cinema.Models.User.UserCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>User</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.FirstName)
            @Html.EditorFor(model => model.FirstName, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LastName)
            @Html.EditorFor(model => model.LastName, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Nickname)
            @Html.EditorFor(model => model.Nickname, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nickname)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BirthDate)
            @Html.EditorFor(model => model.BirthDate, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BirthDate)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.EditorFor(model => model.Password, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PasswordConfirm)
            @Html.EditorFor(model => model.PasswordConfirm, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PasswordConfirm)
        </div>
    </fieldset>

    <p>
        <input type="submit" value="Create" /> | @Html.ActionLink("Back to List", "Index")
    </p>
}

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
