@model KVA.Cinema.Models.ViewModels.Tag.TagDisplayViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<h1>Delete</h1>

<h3>Are you sure you want to delete this tag?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<fieldset>
    <legend>Tag</legend>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.Text)
        @Html.DisplayFor(model => model, "_TagColor")
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(model => model.Color)
        @Html.DisplayFor(model => model.Color, additionalViewData: new { @class = "form-control" })
    </div>
</fieldset>

    <p>
        <input type="submit" value="Delete" /> | @Html.ActionLink("Back to List", "Index")
    </p>
}

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
